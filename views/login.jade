extends layout

block content
    .col-md-4.col-md-offset-4
        
        .modal-content
            .login-panel.panel.panel-default
                .panel-heading
                    p.panel-title(style="text-align:center")
                        strong
                            = dict === undefined ? 'ERROR' : dict.get('login', 'title')
                .panel-body
                    form(method="submit")
                        fieldset
                            .form-group
                                label(for="username")
                                    h5
                                        = dict === undefined ? 'ERROR' : dict.get('login', 'usernameLabel')
                                input.form-control(type="text" id="username")
                            .form-group
                                label(for="password")
                                    h5
                                        = dict === undefined ? 'ERROR' : dict.get('login', 'passwordLabel')
                                input.form-control(type="text" id="password")
                            .form-group
                                .checkbox
                                    label
                                        input(type="checkbox" value="auto-login")
                                        = dict === undefined ? 'ERROR' : dict.get('login', 'autoLoginLabel')
                            .form-group
                                button.btn.btn-primary.btn-block(type"submit")
                                    = dict === undefined ? 'ERROR' : dict.get('login', 'loginButtonText')
                            a.pull-left
                                = dict === undefined ? 'ERROR' : dict.get('login', 'createNewAccount')
                            a.pull-right
                                = dict === undefined ? 'ERROR' : dict.get('login', 'needHelp')
