extends ../layout

block content
    .col-md-4.col-md-offset-4
        //.modal-content
        .panel.panel-default
            .panel-heading
                = dict === undefined ? 'ERROR' : dict.get('createAccount', 'title')
            .panel-body
                form(action='/account/createAccount', method='post')
                    fieldset
                        .form-group
                            label(for='username')
                                h5
                                    = dict === undefined ? 'ERROR' : dict.get('createAccount', 'usernameLabel')
                            input.form-control(type='text', id='username', name='username', required)
                        .form-group
                            label(for='newPassword')
                                h5
                                    = dict === undefined ? 'ERROR' : dict.get('createAccount', 'passwordLabel')
                            input.form-control(type='password', id='newPassword', name='newPassword', required)
                        .form-group
                            label(for='confirmPassword')
                                h5
                                    = dict === undefined ? 'ERROR' : dict.get('createAccount', 'confirmPasswordLabel')
                            input.form-control(type='password', id='confirmPassword', name='confirmPassword', required)
                        .form-group
                            button.btn.btn-primary.btn-block(type='submit')
                                = dict === undefined ? 'ERROR' : dict.get('createAccount', 'submitButtonText')
