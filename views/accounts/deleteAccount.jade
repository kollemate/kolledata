extends ../layout

block content
    .col-md-4.col-md-offset-4
        .modal-content
            .panel.panel-default
                .panel-heading
                    = dict === undefined ? 'ERROR' : dict.get('deleteAccount', 'title')
                    = username
                .panel-body
                    = dict === undefined ? 'ERROR' : dict.get('deleteAccount', 'message')
                    form(action='/account/delete', method='post')
                        button.btn.btn-primary.btn-block(type='submit')
                            = dict === undefined ? 'ERROR' : dict.get('deleteAccount', 'submitButtonText')
                        button.btn.btn-primary.btn-block()
                            = dict === undefined ? 'ERROR' : dict.get('deleteAccount', 'abortButtonText')
