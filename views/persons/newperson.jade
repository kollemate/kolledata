extends ../layout

block content
    //- include partials/alerts

    form.form-horizontal(method='post',action='/persons/new')

        .col-md-5
            div.panel.panel-primary
                div.panel-heading
                    label.control-label(for='firstName') First Name
                    input.form-control(type='text',id='firstName',name='firstName',placeholder='first name')
                    label.control-label(for='name') Last Name
                    input.form-control(type='text',id='lastName',name='lastName',placeholder='last name')

            div.list-group
                div.list-group-item
                    label.control-label(for='url') URL
                    input.form-control(type='text',id='url',name='url',placeholder='http://kolle-mate.de',onblur='validateURL()')
                    //-button.btn.btn-info.btn-xs(type='submit') Speichern

            div.list-group
                div.list-group-item
                    label.control-label(for='email0') MAIL
                    input.form-control(type='text',id='email',name='email',placeholder='max@mustermann.de',onblur='validateEmail()')

            div.list-group
                div.list-group-item
                    label.control-label(for='url') COMPANY
                    select.form-control(id='company',name='company')
                        option - N/A -
                        - for (var i = 0; i < companies.length; i++) {
                            option=companies[i]['com_name']
                        - }

        .col-md-7
            div.list-group
                div.list-group-item.memotextdiv
                    h5.list-group-item-heading
                        strong MEMO
                        p
                        textarea.memotextarea.form-control(id='memo',name='memo')


        .pull-left
            button.btn.btn-info.btn-xs(type='submit',id='submitbtn') Speichern

    .pull-left
        form(method='get',action='/persons/')
            button.btn.btn-xs(type='submit') Abbrechen
