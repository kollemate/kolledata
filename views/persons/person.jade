extends ../layout

block content
    //- include partials/alerts

    .col-md-5
        div.panel.panel-primary
            div.panel-heading
                .pull-left
                    img(id='gravatar', src=gravatar, alt='gravatar')
                h3
                    = (results[0].per_salutation === null ? '' : results[0].per_salutation + ' ') + (results[0].per_academic_title === null ? '' : results[0].per_academic_title + ' ')
                    = results[0].per_firstname + ' ' + results[0].per_name
                        .pull-right
                            form(method='get',action='/persons/' + results[0].per_id + '/edit')
                                button.btn.btn-info.btn-xs(type='submit')
                                    = dict === undefined ? 'ERROR' : dict.get('persons', 'editButtonText')

        div.list-group
            div.list-group-item
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'adress')
                h5.list-group-item-text
                    p=results[0].per_address
                    p=results[0].per_postcode + ' ' + results[0].per_city
                    p=results[0].per_country

        div.list-group
            div.list-group-item
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'phone')
                h5.list-group-item-text
                    =results[0].per_phone1
                h5.list-group-item-text
                    =results[0].per_phone2
                p
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'fax')
                h5.list-group-item-text
                    =results[0].per_fax

        div.list-group
            div.list-group-item
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'email')
                h5.list-group-item-text
                    =results[0].per_email1
                h5.list-group-item-text
                    =results[0].per_email2

        div.list-group
            div.list-group-item
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'url')
                h5.list-group-item-text
                    =results[0].per_url

        div.list-group
            div.list-group-item
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'category')
                h5.list-group-item-text
                    =results[0].cat_name

        div.list-group
            div.list-group-item
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'company')
                h5.list-group-item-text
                    =results[0].com_name
                p
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'department')
                h5.list-group-item-text
                    =results[0].per_department

        p
        form(method='get',action='/persons/')
            button.btn.btn-info.btn-xs(type='submit')
                = dict === undefined ? 'ERROR' : dict.get('persons', 'backButtonText')
    .col-md-7
        div.list-group
            div.list-group-item.memotextdiv
                h5.list-group-item-heading
                    strong
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'memo')
                form(method='post',action='/persons/' + results[0].per_id + '/editMemo')
                    input.hidden.form-control(type='text',id='id',name='id',value=results[0].per_id)
                    textarea.memotextarea.form-control(id='memo',name='memo')=results[0].per_memo
                    p
                    button.btn.btn-info.btn-xs(type='submit')
                        = dict === undefined ? 'ERROR' : dict.get('persons', 'saveButtonText')
