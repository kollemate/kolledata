extends layout

block content
    //- include partials/alerts

    div.panel.panel-primary
        div.panel-heading
            h3
                =results[0]['per_firstname']
                =' '
                =results[0]['per_name']

    div.list-group
        div.list-group-item
            h5.list-group-item-heading
                strong URL
            h5.list-group-item-text
                =results[0]['per_url']

    div.list-group
        div.list-group-item
            h5.list-group-item-heading
               strong E-MAIL
            h5.list-group-item-text
                - if(emails.length == 0) {
                    | no mail available
                - } else {
                -   for (var i = 0; i < emails.length; i++) {
                        p=emails[i]['em_email']
                -   }
                - }


    div.list-group
        div.list-group-item
            h5.list-group-item-heading
                strong COMPANY
            h5.list-group-item-text
                =results[0]['com_name']

    div.list-group
        div.list-group-item
            h5.list-group-item-heading
                strong MEMO
            h5.list-group-item-text
                =results[0]['per_memo']

    .pull-left
        form(method='get',action='/persons/' + results[0]['per_id'])
            button.btn.btn-xs(type='submit') Abbrechen
    form(method='post',action='')
        button.btn.btn-info.btn-xs(type='submit') Speichern
